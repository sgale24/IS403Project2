@model IEnumerable<IS_403_Project_2.Models.DegreeQuestion>

@{
    ViewBag.Title = "FAQ's";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>FAQ</h2>

<p>
    @Html.ActionLink("Ask A Question", "Ask", new { degreeid = ViewBag.degree})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.answer)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.answer)
            </td>
            <td>
                @Html.ActionLink("Answer This Question", "Answer", new { id = item.degreeQuestionID })
            </td>
        </tr>
    }

</table>
